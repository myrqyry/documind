# Environment Variables Template
# Copy this file to .env and fill in your actual values

# === REQUIRED ===
# Get your Gemini API key from Google AI Studio: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# === DATABASE (Optional - uses in-memory storage if not provided) ===
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/documind

# Redis connection string for caching
REDIS_URL=redis://localhost:6379

# === SERVER CONFIGURATION ===
PORT=3000
NODE_ENV=development

# === SECURITY (Optional but recommended for production) ===
# JWT secret for session management
JWT_SECRET=your_super_secret_jwt_key_here

# Session secret for express sessions
SESSION_SECRET=your_session_secret_here

# === EXTERNAL SERVICES (Optional) ===
# For enhanced web scraping capabilities
BROWSERLESS_TOKEN=your_browserless_token_here

# For additional document processing features
DOCLING_API_KEY=your_docling_api_key_here

# === RATE LIMITING ===
# Maximum requests per minute per IP
RATE_LIMIT_MAX=100

# === FILE STORAGE ===
# Maximum file size for uploads (in MB)
MAX_FILE_SIZE=50

# Directory for temporary file storage
TEMP_DIR=./temp

# === LOGGING ===
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# === MCP SERVER (Optional) ===
# Port for MCP server to listen on
MCP_SERVER_PORT=3001

# === PRODUCTION SETTINGS ===
# Set to true in production
TRUST_PROXY=false

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# === MONITORING (Optional) ===
# Application monitoring
SENTRY_DSN=your_sentry_dsn_here

# Performance monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here